<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@mipmap/wallet_base_listview_divider_line"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/item_navigate1"
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:id="@+id/navigate1_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热销菜品"
                android:textColor="#FF526B"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好吃又叫卖"
                android:textSize="10dp"
                android:id="@+id/navigate1_des"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/navigate1_title1"
                android:layout_alignLeft="@+id/navigate1_title1"
                android:layout_alignStart="@+id/navigate1_title1" />
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@mipmap/navigate_01"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_navigate2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@mipmap/wallet_base_listview_divider_line"
                android:id="@+id/imageView5"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/navigate2_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="超市买买买"
                android:textColor="#AB79CF"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/imageView5"
                android:layout_toEndOf="@+id/imageView5"
                android:layout_marginStart="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="省钱省心省时"
                android:textSize="10dp"
                android:id="@+id/navigate2_des2"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/navigate2_title2"
                android:layout_alignLeft="@+id/navigate2_title2"
                android:layout_alignStart="@+id/navigate2_title2" />
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@mipmap/navigate_02"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/imageView4" />

        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@mipmap/wallet_base_listview_divider_line"/>

</LinearLayout>
